<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LMSMaui2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LMSMaui2"
    xmlns:local2="clr-namespace:LMSMaui2.Views"
    xmlns:local3="clr-namespace:LMSMaui2.Views.InstructorViews"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Student"
        ContentTemplate="{DataTemplate local2:StudentView}"
        Route="Student" />
    <ShellContent
        Title="Instructor"
        ContentTemplate="{DataTemplate local2:InstructorView}"
        Route="Instructor" />
    <ShellContent
    Title="Edit Courses"
    ContentTemplate="{DataTemplate local3:EditCoursesView}"
    Route="EditCourses" />
    <ShellContent
    Title="Edit Students"
    ContentTemplate="{DataTemplate local3:EditStudentsView}"
    Route="EditStudents" />

</Shell>

