<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LMSMaui2.Views.InstructorViews.DeleteStudentView"
             Title="Delete a Student">
	<VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
		<Label
            Text="DELETE STUDENT VIEW"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <Entry x:Name="nameInput" Text="Enter student name"/>
        <Button
            Text="Submit"
            Clicked="DeleteStudentClicked" />

        <Button
            Text="Cancel"
            Clicked="CancelClicked"
           ></Button>

	</VerticalStackLayout>
</ContentPage>

