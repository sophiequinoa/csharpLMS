<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LMSMaui2.Views.InstructorViews.AddStudentView"
             Title="AddStudentView">
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <Label 
            Text="ADD Students VIEW"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="Cancel"
            Clicked="CancelClicked"
            />


        <Entry x:Name="nameInput" Text="Enter the student's name"/>
        <Button
            Text="Submit"
            Clicked="AddNameClicked"
            />
    </VerticalStackLayout>
</ContentPage>
