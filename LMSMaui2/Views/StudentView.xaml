<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LMSMaui2.Views.StudentView"
             Title="StudentView">
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <Label 
            Text="STUDENT VIEW"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="View Courses"
            Clicked="StudentCoursesClicked"
            />
        
        <Button
            Text="Cancel"
            Clicked="CancelClicked"
            />
    </VerticalStackLayout>
</ContentPage>