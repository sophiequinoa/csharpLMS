<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LMSMaui2.Views.InstructorView"
             Title="InstructorView">
        <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label 
            Text="INSTRUCTOR VIEW"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Button
                Text="Cancel"
                Clicked="CancelClicked"
                ></Button>
            <Button
                Text="Edit Courses"
                Clicked="EditCoursesClicked"
                ></Button>
            <Button
                Text="Edit Students"
                Clicked="EditStudentsClicked"
                ></Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>